{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}/vutils.sln",
                "/property:GenerateFullPaths=true",
                "/t:build",
                "/verbosity:minimal"            
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "runTest",
            "type": "shell",
            "command": "mono",
            "args": [
                "${workspaceFolder}/Testing/bin/Debug/Testing.exe"        
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}